
<h1>Sign In</h1>
<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <!-- TODO for now i'll remove the email validation -->
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>
